<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp">
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Certificado"
        android:textSize="@dimen/string_dimens_btn"
        android:id="@+id/btn_certificated"
        android:enabled="false"
        android:layout_alignTop="@+id/btn_progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/string_dimens_btn"
        android:text="Progreso"
        android:id="@+id/btn_progress"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"  />


</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">
    <Button
        android:layout_height="@dimen/box_temario"
        android:layout_width="@dimen/box_temario"
        android:layout_gravity="center"
        android:background="@drawable/mod_uno"
        android:id="@+id/btn_modulo_uno"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="@dimen/box_temario"
        android:layout_width="@dimen/box_temario"
        android:layout_gravity="center"
        android:id="@+id/btn_modulo_dos"
        android:background="@drawable/mod_dos"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="@dimen/box_temario"
        android:layout_width="@dimen/box_temario"
        android:layout_gravity="center"
        android:background="@drawable/mod_3"
        android:id="@+id/btn_modulo_tres"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">
    <Button
        android:layout_height="@dimen/box_temario"
        android:layout_width="@dimen/box_temario"
        android:layout_gravity="center"
        android:background="@drawable/mod_cuatro"
        android:id="@+id/btn_modulo_cuatro"
        android:enabled="false"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="@dimen/box_temario"
        android:layout_width="@dimen/box_temario"
        android:layout_gravity="center"
        android:id="@+id/btn_modulo_cinco"
        android:background="@drawable/mod_cinco"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Configuracion"
                android:textSize="@dimen/string_dimens_btn"
                android:id="@+id/btn_settings"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Enviar Correo"
                android:textSize="@dimen/string_dimens_btn"
                android:id="@+id/btn_scroll"
                android:layout_alignTop="@+id/btn_settings"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <Button
            android:layout_height="@dimen/box_temario"
            android:layout_width="@dimen/box_temario"
            android:layout_gravity="center"
            android:background="@drawable/game"
            android:id="@+id/btn_games" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/string_dimens_btn"
            android:text="Cambiar tema"
            android:id="@+id/btn_tema" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_porcentaje"/>
</LinearLayout>
    </ScrollView>
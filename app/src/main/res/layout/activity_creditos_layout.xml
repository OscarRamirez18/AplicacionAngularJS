<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_azul"
    tools:context="utng.edu.mx.angularjs.CreditosActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:src="@drawable/love"
         android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/desarrollador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desarrollador "
        android:textColor="@color/md_red_A200"
        android:textSize="30dp"
        android:layout_below="@+id/logo"

        />
    <TextView
        android:id="@+id/desarrollador_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oscar Manuel Ramírez García"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="24dp"
        android:layout_below="@+id/desarrollador"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materia:"
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:textColor="@color/md_red_A200"
        android:layout_below="@+id/desarrollador_name"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollo de Aplicaciones III"
        android:id="@+id/textView8"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="24dp"
        android:layout_below="@+id/textView7"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad:"
        android:id="@+id/textView9"
        android:textSize="30dp"
        android:textColor="@color/md_red_A200"
        android:layout_below="@+id/textView8"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad Tecnologica del Norte de Guanajuato"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:id="@+id/textView10"
        android:textSize="24dp"
        android:layout_below="@+id/textView9"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesor:"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:textColor="@color/md_red_A200"
        android:layout_below="@+id/textView10"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anastacio Rodriguez Garcia"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:id="@+id/textView12"
        android:textSize="24dp"
        android:layout_below="@+id/textView11"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agradecimientos"
        android:id="@+id/textView13"
        android:textSize="30dp"
        android:textColor="@color/md_red_A200"
        android:layout_below="@+id/textView12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anastacio Rodriguez Garcia"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:id="@+id/textView16"
        android:textSize="24dp"
        android:layout_below="@+id/textView13"
        />
    </LinearLayout>
</ScrollView>